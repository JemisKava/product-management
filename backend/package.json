{
  "name": "product-management-backend",
  "version": "1.0.0",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "db:generate": "bunx --bun prisma generate",
    "db:push": "bunx --bun prisma db push",
    "db:migrate": "bunx --bun prisma db push",
    "db:migrate:create": "bunx --bun prisma migrate dev --create-only",
    "db:migrate:prod": "bunx --bun prisma migrate deploy",
    "db:seed": "bun prisma/seed.ts",
    "db:studio": "bunx --bun prisma studio",
    "db:reset": "bunx --bun prisma db push --force-reset",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist generated",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "latest",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^11.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/adapter-mariadb": "^7.2.0",
    "@prisma/client": "^7.0.0",
    "@trpc/server": "^11.8.1",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mariadb": "^3.4.5",
    "multer": "^2.0.2",
    "mysql2": "^3.16.0",
    "prisma": "^7.0.0",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "zod": "^4.3.5"
  }
}
