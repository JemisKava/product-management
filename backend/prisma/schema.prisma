// Prisma Schema for Product Management System
// Database: MySQL
// ORM: Prisma v7+

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

// ============================================
// ENUMS
// ============================================

enum Role {
  ADMIN
  EMPLOYEE
}

enum ProductStatus {
  STOCK_IN
  STOCK_OUT
}

// ============================================
// AUTHENTICATION & USER TABLES
// ============================================

/// User account - can be Admin or Employee
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique @db.VarChar(255)
  password  String   @db.VarChar(255)
  name      String   @db.VarChar(100)
  role      Role     @default(EMPLOYEE)
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  permissions   UserPermission[]
  refreshTokens RefreshToken[]

  @@index([email])
  @@index([role])
  @@index([isActive])
  @@map("users")
}

/// Refresh token for JWT token refresh flow
/// Stored in HttpOnly cookie, validated against DB
model RefreshToken {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  token     String   @db.VarChar(500) // Hashed refresh token
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  isRevoked Boolean  @default(false) @map("is_revoked")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@index([isRevoked])
  @@map("refresh_tokens")
}

// ============================================
// PERMISSION TABLES
// ============================================

/// Permission definition - what actions can be performed
model Permission {
  id          Int     @id @default(autoincrement())
  name        String  @db.VarChar(50) // Display name: "View Products"
  code        String  @unique @db.VarChar(50) // Code: "PRODUCT_VIEW"
  description String? @db.VarChar(255)

  // Relations
  users UserPermission[]

  @@index([code])
  @@map("permissions")
}

/// Junction table - which users have which permissions
/// Admin users implicitly have ALL permissions (not stored here)
model UserPermission {
  id           Int      @id @default(autoincrement())
  userId       Int      @map("user_id")
  permissionId Int      @map("permission_id")
  createdAt    DateTime @default(now()) @map("created_at")

  // Relations
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([userId, permissionId])
  @@index([userId])
  @@index([permissionId])
  @@map("user_permissions")
}

// ============================================
// PRODUCT TABLES
// ============================================

/// Product category
model Category {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(100)
  slug      String   @unique @db.VarChar(100)
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  products Product[]

  @@index([slug])
  @@map("categories")
}

/// Product - main entity
model Product {
  id           Int           @id @default(autoincrement())
  productId    String        @unique @map("product_id") @db.VarChar(20) // PRD001, PRD002, etc.
  name         String        @db.VarChar(255)
  categoryId   Int           @map("category_id")
  stockDetails Int           @default(0) @map("stock_details")
  imageUrl     String?       @map("image_url") @db.VarChar(500)
  price        Decimal       @db.Decimal(10, 2)
  quantity     Int           @default(0)
  status       ProductStatus @default(STOCK_IN)
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")

  // Relations
  category Category @relation(fields: [categoryId], references: [id])

  @@index([productId])
  @@index([name])
  @@index([categoryId])
  @@index([status])
  @@index([price])
  @@index([stockDetails])
  @@map("products")
}
